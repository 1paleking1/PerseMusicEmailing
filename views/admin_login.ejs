<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/scripts/script.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script>
        function pass_toggle() {
            var x = document.getElementById("adminPasswordinput");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>

</head>
<body>

    <%- include('../partials/banner.ejs') %>


    <!-- flash messages -->
    <% if (message) { %>
    <div class="alert alert-<%= message.type %> flash">
        <button type="button" name="close" class="btn btn-close" data-bs-dismiss="alert">&times;</button>
        <strong><%= message.intro %> </strong> <%= message.message %> 
    </div>
    <% } %>


    <div class="m-5">
        <div class="d-flex">
            <div class="d-flex flex-wrap mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/admin-login" style="margin: 50px;" method="POST">

                            <div class="mb-3">
                                <label for="teacherInput" class="form-label">
                                    Username
                                </label>
                                <input type="text" class="form-control sm" name="admin-username">
                            </div>

                            <div class="mb-3">
                                <div>
                                    <label for="teacherInput" class="form-label">
                                        Password
                                    </label>
                                    <input type="password" class="form-control sm" name="admin-password" id="adminPasswordinput" value="">
                                </div>
                                
                                <div class="mt-2">
                                    <input class="form-check-input" type="checkbox" id="showPassCheck" onclick="pass_toggle()">
                                    <label class="form-check-label mx-2" for="flexCheckDefault">
                                        Show Password
                                    </label>
                                </div>
                                
                                <div class="d-grid gap-2 mt-3">
                                    <button class="btn btn-primary" id="admin-submit" type="submit" onclick="">Submit</button>
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>     

    <script>

        function postLogin() {

            data = {
                'username': 'testing123',
                'password': document.getElementById('adminPasswordinput').value
            }

            axios.post('/admin-login', data)
                .then((result) => {
                    console.log(result)
                }).catch((err) => {
                    console.log(err)
                });

        }
        
    </script>

    
</body>
</html>